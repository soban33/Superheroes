<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/mainAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mainToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            app:titleTextColor="@color/colorPrimaryDark"
            />
    </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="8dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageofcapt"
                android:src="@drawable/captain"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="6dp"
                />

            <TextView
                android:id="@+id/captainname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/imageofcapt"
                android:fontFamily="@font/montserrat"
                android:text="@string/captain_america"
                android:textColor="#800000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailofcapt"
                android:layout_below="@id/captainname"
                android:layout_toEndOf="@id/imageofcapt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/captamerica_gmail_com"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_light"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_below="@id/emailofcapt"
                android:layout_toEndOf="@id/imageofcapt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MARVEL"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="8dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageofironman"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/irnman"
                app:civ_border_color="@color/colorPrimaryDark"
