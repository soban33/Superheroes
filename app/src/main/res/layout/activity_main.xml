                />

            <TextView
                android:id="@+id/ironmanname"
                android:layout_toEndOf="@id/imageofironman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iron Man"
                android:textColor="#800000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat"
                />

            <TextView
                android:id="@+id/emailofironman"
                android:layout_below="@id/ironmanname"
                android:layout_toEndOf="@id/imageofironman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ironman@gmail.com"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_light"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_below="@id/emailofironman"
                android:layout_toEndOf="@id/imageofironman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MARVEL"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
